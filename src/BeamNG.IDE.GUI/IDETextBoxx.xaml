<UserControl x:Class="BeamNG.IDE.GUI.IDETextBoxx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeamNG.IDE.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid>
        <Border x:Name="border" Background="#FF211F1F" CornerRadius="6" HorizontalAlignment="Right" Height="30" Margin="0,0,-800,-30" VerticalAlignment="Bottom" Width="800">
            <TextBox x:Name="main"  Margin="10,0,0,0"  Text="TextBox" VerticalAlignment="Center" BorderBrush="{x:Null}" BorderThickness="0" FontFamily="Arial" Foreground="White" Background="{x:Null}"/>
        </Border>

    </Grid>
</UserControl>
