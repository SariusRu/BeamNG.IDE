<UserControl x:Class="BeamNG.IDE.GUI.IDETextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeamNG.IDE.GUI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" Height="30">
    <Border x:Name="border" Background="#FF211F1F" CornerRadius="6" MouseEnter="border_MouseEnter" MouseLeave="border_MouseLeave" MouseDown="border_MouseDown">
        <TextBox x:Name="main"  Margin="10,0,0,0"  Text="TextBox" VerticalAlignment="Center" BorderBrush="{x:Null}" BorderThickness="0" FontFamily="Arial" Foreground="White" Background="{x:Null}" GotFocus="main_GotFocus" LostFocus="main_LostFocus"/>
    </Border>
</UserControl>
